@model List<Product>
@{
    ViewBag.Title = "Cart Details";
}

<div class="container">
    <h1 class="display-3 my-5">Cart Details</h1>   
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>
                            <a asp-controller="Product" asp-action="Details"
                               asp-route-id="@product.ProductID"
                               asp-route-slug="@product.Slug"
                               class="btn btn-sm text-primary">View Details</a>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
    <p class="">Your total is: @ViewBag.TotalWithoutDiscount.ToString("C")</p>
    <p class="font-weight-bold">Your total with discount is: @ViewBag.Total.ToString("C")</p>
</div>
